@model ImagenZapatilla

<h1 style="color:blue">
    Paginación individual Vista Departamentos
</h1>
<h2 style="color:red">
    Registro @Model.IdImagen de @ViewData["ULTIMO"]
</h2>

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item">
            <a asp-controller="Zapatilla"
               asp-action="PaginarRegistroZapatilla"
               asp-route-posicion="1">
                Primero
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Zapatilla"
               asp-action="PaginarRegistroZapatilla"
               asp-route-posicion="@ViewData["ANTERIOR"]">
                Anterior
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Zapatilla"
               asp-action="PaginarRegistroZapatilla"
               asp-route-posicion="@ViewData["SIGUIENTE"]">
                Siguiente
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Zapatilla"
               asp-action="PaginarRegistroZapatilla"
               asp-route-posicion="@ViewData["ULTIMO"]">
                Ultimo
            </a>
        </li>
    </ul>
</div>
<hr />

<img src="@Model.Imagen"/>
